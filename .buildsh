#!/bin/bash

# Installer les dépendances système
apt-get update
apt-get install -y ffmpeg python3-pip

# Installer les dépendances Python
pip install --upgrade pip
pip install -r requirements.txt

# Créer le dossier www et ses sous-dossiers
mkdir -p www/static

# Copier les fichiers statiques
cp -r static/* www/static/
cp static/index.html www/

# Vérifier l'installation de FFmpeg
ffmpeg -version

# Afficher la structure des dossiers pour le débogage
echo "Contenu du dossier www :"
ls -la www/
echo "Contenu du dossier www/static :"
ls -la www/static/